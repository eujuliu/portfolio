	{
		titleTranslation: 'aboutMe.education.label',
		items: [
			{
				title: 'UNINTER International University Center',
				company: "Associate's degree, Computer Systems Analysis/Analyst",
				tools: [''],
				period: 'Sep 2022 - Dec 2024',
				translation: {
					'pt-br': {
						title: 'Centro Universitário Internacional UNINTER',
						company: 'Tecnólogo em Analise e Desenvolvimento de Sistemas',
						period: 'Set 2022 - Dez 2024',
					},
					es: {
						title: 'Centro Universitario Internacional UNINTER',
						company: 'Tecnólogo en Análisis y Desarrollo de Sistemas',
						period: 'Sep 2022 - Dic 2024',
					},
				},
			},
		],
	},
];
const languages = ['pt-br', 'en', 'es'];
---

<BaseLayout>
	<div class="about-me-content">
		<div class="wrapper">
			<img src="/images/profile-picture.jpg" alt="A picture of Julio Martins" />

			<div class="group">
				<Text
					className="about-me title"
					size="5xl"
					translation="aboutMe.label"
					weight="bold"
					client:only
				/>
				<Text
					size="base"
					className="about-me text"
					translation="aboutMe.text"
					client:only
				/>
			</div>
		</div>

		{
			sections.map((section) => (
				<List
					titleTranslation={section.titleTranslation}
					items={section.items}
					client:only
				/>
			))
		}

		<Text
			size="5xl"
			weight="bold"
			translation="aboutMe.languages.label"
			className="languages-title"
			client:only
		/>

		<div class="languages">
			{
				languages.map((language) => (
					<div class="language">
						<Text size="lg" translation={`languages.${language}`} client:only />
						<Text
							size="base"
							translation={`aboutMe.languages.levels.${language}`}
							client:only
						/>
					</div>
				))
			}
		</div>

		<Link name="download-curriculum" to={resumes} client:only>
			<i class="bx bx-down-arrow-alt"></i>
			<Text size="base" translation="aboutMe.curriculum" client:only />
		</Link>
	</div>
</BaseLayout>

<style is:global>
	.about-me-content {
		padding: 2rem;

		display: flex;
		gap: 2.5rem;
		flex-direction: column;
	}

	.about-me-content .wrapper {
		display: flex;
		gap: 2.5rem;
		flex-direction: column;
	}

	.about-me-content .wrapper .group {
		display: flex;
		gap: 2.5rem;
		flex-direction: column;
	}

	.about-me-content .wrapper img {
		max-width: 100%;
		border-radius: 15px;
	}

	.about-me-content .about-me.title {
		border-bottom: 2px solid var(--text-color);
	}

	.about-me-content .languages {
		display: flex;
		gap: 1rem;
		flex-direction: column;
		border-bottom: 1px solid var(--text-color-hover);
		padding-bottom: 2.5rem;
	}

	.about-me-content .languages .language {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.about-me-content .languages-title {
		border-bottom: 2px solid var(--text-color);
	}

	.about-me-content .download-curriculum {
		font-size: var(--font-size-base);
		color: var(--text-color);
		font-weight: bold;
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding-bottom: 2.5rem;
	}

	@media screen and (min-width: 768px) {
		.about-me-content {
			max-width: 80vw;
		}

		.about-me-content .wrapper {
			display: flex;
			gap: 2.5rem;
			flex-direction: row;
		}

		.about-me-content .wrapper img {
			max-width: clamp(200px, 40rem, 400px);
			order: 2;
		}
	}
</style>
