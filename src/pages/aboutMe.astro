---
import Text from '../components/Text';
import List from '../components/List';
import BaseLayout from '../layouts/BaseLayout.astro';
import type { ListProps } from '../components/List';
import Link, { type LinkTranslation } from '../components/Link';

const resumes: LinkTranslation = {
	en: {
		name: "Julio's Resume",
		href: '/public/curriculum-en.docx',
		type: 'download',
	},
	'pt-br': {
		name: 'Currículo do Julio',
		href: '/public/curriculum-pt-br.docx',
		type: 'download',
	},
};
const sections: ListProps[] = [
	{
		titleTranslation: 'aboutMe.experience.label',
		items: [
			{
				title: 'Software Engineer',
				company: 'HEADER Interactive',
				period: 'Jan 2023 - Dec 2024',
				local: 'Curitiba, Paraná, Brazil',
				tools: [
					'Vue.js',
					'Node.js',
					'Typescript',
					'Git',
					'Docker',
					'Docker Compose',
					'JavaScript',
					'IBM DB2',
					'MongoDB',
					'RabbitMQ',
					'BullMQ',
					'AWS',
				],
				translation: {
					'pt-br': {
